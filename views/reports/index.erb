<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="card shadow-sm">
        <div class="card-header navbar-custom text-white">
          <h4><i class="bi bi-file-earmark-text me-2"></i><%= @report_title %></h4>
        </div>
        <div class="card-body">
          <div class="list-group">
            <% @reports.each do |report| %>
              <a href="<%= report[:path] %>?date_from=<%= (Date.today - 7).strftime('%Y-%m-%d') %>&date_to=<%= Date.today.strftime('%Y-%m-%d') %>"
                 class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                <span>
                  <i class="bi bi-graph-up me-2"></i>
                  <%= report[:name] %>
                </span>
                <i class="bi bi-chevron-right"></i>
              </a>
            <% end %>
          </div>
          
          <div class="mt-4">
            <a href="/" class="btn btn-custom">
              <i class="bi bi-arrow-left me-2"></i>На главную
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>