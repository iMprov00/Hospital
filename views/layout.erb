<script>    <!-- Скрипт для работы с койками -->
document.addEventListener('DOMContentLoaded', function() {    // Ожидание загрузки DOM
  document.querySelectorAll('.toggle-btn').forEach(btn => {    // Для всех кнопок переключения
    btn.addEventListener('click', async (e) => {    // Обработчик клика
      e.preventDefault();    // Отмена стандартного поведения
      
      const bedCard = e.target.closest('.bed-card');    // Карточка койки
      const date = '<%= @target_date %>';    // Текущая дата
      const bedIndex = bedCard.querySelector('.card-title').textContent.match(/\d+/)[0];    // Номер койки
      
      // Определяем тип действия (освободить или забронировать)
      const isOccupied = bedCard.classList.contains('occupied-card');    // Проверка занятости
      
      const formData = new FormData();    // Данные формы
      formData.append('date', date);    // Добавление даты
      formData.append('bed_index', bedIndex);    // Добавление номера койки
      
      if (isOccupied) {    // Если койка занята
        // Для кнопки "Освободить"
        formData.append('patient_name', '');    // Пустое имя
        formData.append('diagnosis', '');    // Пустой диагноз
      } else {    // Если койка свободна
        // Для кнопки "Забронировать"
        const patientName = bedCard.querySelector('.patient-input').value || '';    // Имя пациента
        const diagnosis = bedCard.querySelector('.diagnosis-input').value || '';    // Диагноз
        formData.append('patient_name', patientName);    // Добавление имени
        formData.append('diagnosis', diagnosis);    // Добавление диагноза
      }
      
      try {    // Обработка запроса
        const response = await fetch('/occupy', {    // Отправка POST-запроса
          method: 'POST',
          body: formData
        });
        
        if (response.ok) {    // Если успешно
          window.location.reload();    // Перезагрузка страницы
        }
      } catch (error) {    // Обработка ошибок
        console.error('Ошибка:', error);    // Логирование ошибки
      }
    });
  });
});
</script>
