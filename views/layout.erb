  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Кастомные стили -->
  <style>
    :root {
      --main-color: #54c654;
      --main-color-dark: #3a8a3a;
    }
    .navbar-custom {
      background-color: var(--main-color) !important;
    }
    .btn-custom {
      background-color: var(--main-color);
      border-color: var(--main-color-dark);
      color: white;
    }
    .btn-custom:hover {
      background-color: var(--main-color-dark);
      border-color: var(--main-color-dark);
    }
    .bed-card {
      transition: all 0.3s ease;
      cursor: pointer;
    }
    .bed-card:hover {
      transform: translateY(-3px);
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    .occupied-card {
      background-color: #ffe8e8;
      border-color: #ff6b6b;
    }
  </style>
</head>
<body class="bg-light">
  <!-- Навбар -->
  <nav class="navbar navbar-expand-lg navbar-dark navbar-custom mb-4">
    <div class="container">
<a class="navbar-brand fw-bold d-flex align-items-center" href="/">
  <img src="/images/logo.png" alt="Логотип" style="height: 28px; margin-right: 10px;">
  Госпитализация ДАР
</a>
      <div class="d-flex align-items-center">
        <span class="text-white me-3"><%= @target_date.strftime('%d.%m.%Y') %></span>

          <i class="bi bi-gear"></i>
        </a>
      </div>
    </div>
  </nav>

  <div class="container">
    <%= yield %>
  </div>

  <!-- Подвал -->
  <footer class="mt-5 py-3 text-center text-muted">
    <div class="container">
      <small>© <%= Time.now.year %> Госпитализация ДАР. Все права защищены.</small>
    </div>
  </footer>

  <!-- Скрипты -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Ваш JS-код
  </script>

  <script>
document.addEventListener('DOMContentLoaded', function() {
  document.querySelectorAll('.toggle-btn').forEach(btn => {
    btn.addEventListener('click', async (e) => {
      e.preventDefault();
      
      const bedCard = e.target.closest('.bed-card');
      const date = '<%= @target_date %>';
      const bedIndex = bedCard.querySelector('.card-title').textContent.match(/\d+/)[0];
      const patientInput = bedCard.querySelector('.patient-input');
      const patientName = patientInput ? patientInput.value : '';
      
      const formData = new FormData();
      formData.append('date', date);
      formData.append('bed_index', bedIndex);
      formData.append('patient_name', patientName);
      
      try {
        const response = await fetch('/occupy', {
          method: 'POST',
          body: formData
        });
        
        if (response.ok) {
          window.location.reload();
        }
      } catch (error) {
        console.error('Ошибка:', error);
      }
    });
  });
});
</script>
