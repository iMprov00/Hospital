<!-- index.erb -->
<div class="row justify-content-center mb-4">    <!-- Ряд с центрированием -->
  <div class="col-md-4">    <!-- Колонка средней ширины -->
    <div class="card shadow-sm">    <!-- Карточка без лишних отступов -->
      <div class="card-body text-center">    <!-- Центрированное содержимое -->
<label for="date-picker" class="form-label mb-2">
  <h2 style="font-family: 'Jost', sans-serif; font-weight: 600;">Дата госпитализации</h2>
</label>
        <form id="date-form" class="d-inline-block">
            <div class="date-picker-container position-relative">
              <input type="text" 
                     class="form-control fw-bold fs-5 py-2 date-picker-input ps-5" 
                     name="date" 
                     value="<%= @target_date.strftime('%d.%m.%Y') %>"
                     id="date-picker"
                     placeholder="дд.мм.гггг"
                     data-input>
              <i class="bi bi-calendar3 date-picker-icon"></i>
            </div>
        </form>
      </div>
    </div>
  </div>
</div>
  <!-- Сетка коек -->
  <div class="row row-cols-2 row-cols-md-4 g-4">    <!-- Сетка карточек коек -->
    <% @beds.each do |bed| %>    <!-- Цикл по всем койкам -->
      <div class="col">    <!-- Колонка для карточки -->
<div class="card bed-card <%= 'occupied-card' if bed.occupied %> h-100" style="padding: 0.3rem;" data-date="<%= bed.date.strftime('%Y-%m-%d') %>">
  <div class="card-body text-center p-2">
    <h5 class="card-title fs-6 mb-1">Койка #<%= bed.bed_index %></h5>
    
    <% if bed.occupied %>
      <div class="mb-1">
        <span class="badge bg-danger">Занято</span>
        <p class="mt-1 mb-1 fw-bold small"><%= bed.patient_name %></p>
        <% if bed.diagnosis_code.present? || bed.diagnosis_name.present? %>
          <p class="text-muted small mb-1">Диагноз: <%= [bed.diagnosis_code, bed.diagnosis_name].compact.join(' ') %></p>
        <% end %>
      </div>
      <button class="btn btn-sm btn-outline-danger toggle-btn w-100 py-1">Освободить</button>
    <% else %>
      <div class="mb-1">
        <span class="badge bg-success">Свободно</span>
        <input type="text" name="patient_name" class="form-control form-control-sm mt-1 patient-input" placeholder="ФИО">
      </div>
      <div class="mb-1">
        <input type="text" name="diagnosis" class="form-control form-control-sm diagnosis-input" placeholder="Диагноз" 
               value="<%= [bed.diagnosis_code, bed.diagnosis_name].compact.join(' ').presence %>">
      </div>
      <button class="btn btn-sm btn-custom toggle-btn w-100 py-1">Забронировать</button>
    <% end %>
  </div>
  <div class="card-footer bg-transparent py-1">
    <small class="text-muted"><%= bed.date.strftime('%d.%m.%Y') %></small>
  </div>
</div>
      </div>
    <% end %>
  </div>
</div>